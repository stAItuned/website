{
  "hosting": {
    "site": "staituned-production",
    "source": ".",
    "frameworksBackend": { 
      "region": "europe-west1" 
    },
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "scripts/**",
      "*.sh",
      "*.md",
      ".env*",
      ".contentlayer/**",
      ".next/cache/**",
      "public/content/.git/**",
      "public/content/.github/**",
      "public/content/.vscode/**",
      "public/content/.gitignore",
      "public/content/.pre-commit-config.yaml",
      "public/content/README.md"
    ],
    "rewrites": [
      {
        "source": "/sw.js",
        "destination": "/sw.js"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|webp)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control", 
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "/sw.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          },
          {
            "key": "Service-Worker-Allowed",
            "value": "/"
          },
          {
            "key": "Content-Type",
            "value": "application/javascript"
          }
        ]
      },
      { 
        "source": "**", 
        "headers": [
          { 
            "key": "Cache-Control", 
            "value": "public, max-age=0, must-revalidate" 
          }
        ] 
      }
    ]
  }
}
