{
  "hosting": {
    "site": "staituned-production",
    "source": ".",
    "frameworksBackend": { 
      "region": "europe-west1" 
    },
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "scripts/**",
      "*.sh",
      "*.md",
      ".env*",
      ".contentlayer/**",
      ".next/cache/**",
      "public/content/.git/**",
      "public/content/.github/**",
      "public/content/.vscode/**",
      "public/content/.gitignore",
      "public/content/.pre-commit-config.yaml",
      "public/content/README.md"
    ],
    "headers": [
      { 
        "source": "**", 
        "headers": [
          { 
            "key": "Cache-Control", 
            "value": "public, max-age=0, must-revalidate" 
          }
        ] 
      }
    ]
  }
}
