{
  "hosting": {
    "site": "staituned-production",
    "source": ".",
    "frameworksBackend": { 
      "region": "europe-west1" 
    },
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "content/**",
      "scripts/**",
      "*.sh",
      "*.md",
      ".env*",
      "*.config.js",
      "*.config.ts",
      "*.config.cjs",
      "tsconfig*.json",
      ".contentlayer/**",
      ".next/cache/**"
    ],
    "headers": [
      { 
        "source": "**", 
        "headers": [
          { 
            "key": "Cache-Control", 
            "value": "public, max-age=0, must-revalidate" 
          }
        ] 
      }
    ]
  }
}
