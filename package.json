{
	"name": "staituned-website",
	"version": "1.0.0",
	"private": true,
	"engines": {
		"node": ">=20.0.0",
		"npm": ">=8.0.0"
	},
	"scripts": {
		"dev": "next dev --port 3000",
		"dev:prod": "NEXT_PUBLIC_BASE_URL=https://dev.staituned.com next dev --port 3000",
		"build": "next build",
		"build:dev": "NEXT_PUBLIC_BASE_URL=https://dev.staituned.com NODE_ENV=development next build",
		"build:firebase": "FIREBASE_DEPLOYMENT=true node scripts/prepare-firebase-build.js && FIREBASE_DEPLOYMENT=true next build; FIREBASE_DEPLOYMENT=true node scripts/restore-firebase-build.js",
		"export": "FIREBASE_DEPLOYMENT=true next build",
		"start": "next start",
		"lint": "next lint",
		"update:content": "git submodule update --init --recursive --remote --depth 1",
		"sync:content": "npm run update:content && npm run build",
		"setup:automation": "./setup-automation.sh",
		"check:content": "echo 'Articles:' && find content/articles -name '*.md' | wc -l && echo 'Team members:' && find content/team -name 'meta.md' | wc -l",
		"deploy:prod": "firebase deploy --project staituned-prod --only hosting:production",
		"deploy:dev": "firebase deploy --project staituned-prod --only hosting:development"
	},
	"dependencies": {
		"@emotion/is-prop-valid": "^1.3.1",
		"@tiptap/extension-document": "^2.1.16",
		"@tiptap/extension-paragraph": "^2.1.16",
		"@tiptap/extension-text": "^2.1.16",
		"@tiptap/react": "^2.1.16",
		"@tiptap/starter-kit": "^2.1.16",
		"classnames": "^2.3.2",
		"contentlayer": "^0.3.4",
		"dayjs": "^1.11.10",
		"firebase-admin": "^12.0.0",
		"framer-motion": "^12.23.12",
		"marked": "^16.1.2",
		"next": "^13.5.6",
		"next-auth": "^4.24.5",
		"next-contentlayer": "^0.3.4",
		"octokit": "^3.1.2",
		"openai": "^4.20.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"remark-gfm": "^3.0.1"
	},
	"devDependencies": {
		"@tailwindcss/forms": "^0.5.7",
		"@tailwindcss/typography": "^0.5.10",
		"@types/marked": "^5.0.2",
		"@types/node": "^20.10.5",
		"@types/react": "^18.2.45",
		"@types/react-dom": "^18.2.18",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"autoprefixer": "^10.4.16",
		"eslint": "^8.56.0",
		"eslint-config-next": "^13.5.6",
		"eslint-config-prettier": "^10.1.8",
		"postcss": "^8.4.32",
		"tailwindcss": "^3.3.6",
		"typescript": "^5.3.3"
	}
}
