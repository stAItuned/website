rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow authenticated users to read/write their own drafts
    match /drafts/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read/write their own drafts collection
    match /drafts/{userId}/articles/{articleId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public read access for published content (if needed)
    match /published/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // User profiles - users can read, write, and delete their own data
    match /users/{userId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Analytics data - Allow Cloud Functions to write, public read access
    match /analytics/summaries {
      allow read: if true;
      allow write: if true; // Cloud Functions will write with admin SDK
    }
    
    match /analytics/articles/{articleSlug} {
      allow read: if true;
      allow write: if true; // Cloud Functions will write with admin SDK
    }
    
    // Agent states - read-only for frontend, only backend (service account) can write
    match /agent_states/{articleId} {
      allow read: if true;  // Public read access
      allow write: if false; // Only backend can write
    }
    
    // Usage logs - read-only for frontend
    match /usage_logs/{logId} {
      allow read: if true;
      allow write: if false; // Only backend can write
    }
    
    // Articles - Public read, write restricted to Admin SDK (backend)
    match /articles/{articleId} {
      allow read: if true;
      allow write: if false; // Only backend can write
    }
    
    // Backlog items - Internal use, require authentication
    match /backlog/{itemId} {
      allow read, write: if request.auth != null;
    }
    
    // User preferences - Owner only access
    match /preferences/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Config collection - Used for AI settings etc.
    // In prod, restrict write to admin emails or claims
    match /config/{configId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Default: deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
